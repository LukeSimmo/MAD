<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="curtin.edu.assignment2.MainActivity">

    <TextView
        android:id="@+id/labelMainSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Select a User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelMainTitle" />

    <TextView
        android:id="@+id/labelMainTitle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Welcome to Math Test!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMainTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/btnColour"
        android:text="Teacher"
        app:layout_constraintEnd_toStartOf="@+id/labelMainSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/labelMainSubtitle" />

    <Button
        android:id="@+id/btnMainStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/btnColour"
        android:text="Student"
        app:layout_constraintStart_toEndOf="@+id/labelMainSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/labelMainSubtitle" />
</androidx.constraintlayout.widget.ConstraintLayout>