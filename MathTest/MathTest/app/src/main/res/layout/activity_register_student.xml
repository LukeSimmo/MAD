<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/labelRegisterStudentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Register Student"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelRegisterStudentFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="First Name:"
        app:layout_constraintBaseline_toBaselineOf="@id/editRegisterStudentFirstName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editRegisterStudentFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Firstname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/imageRegisterStudentImage"
        app:layout_constraintStart_toEndOf="@+id/labelRegisterStudentFirstName"
        app:layout_constraintTop_toBottomOf="@+id/labelRegisterStudentTitle" />

    <TextView
        android:id="@+id/labelRegisterStudentLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        app:layout_constraintBaseline_toBaselineOf="@id/editRegisterStudentLastname"
        app:layout_constraintStart_toStartOf="@+id/labelRegisterStudentFirstName" />

    <EditText
        android:id="@+id/editRegisterStudentLastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Lastname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/imageRegisterStudentImage"
        app:layout_constraintStart_toEndOf="@+id/labelRegisterStudentFirstName"
        app:layout_constraintTop_toBottomOf="@+id/editRegisterStudentFirstName" />

    <EditText
        android:id="@+id/editRegisterStudentPhNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/btnRegisterStudentPhMore"
        app:layout_constraintStart_toEndOf="@+id/labelRegisterStudentFirstName"
        app:layout_constraintTop_toBottomOf="@+id/editRegisterStudentLastname" />

    <TextView
        android:id="@+id/labelRegisterStudentPhNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number:"
        app:layout_constraintBaseline_toBaselineOf="@id/editRegisterStudentPhNumber"
        app:layout_constraintStart_toStartOf="@+id/labelRegisterStudentLastname" />

    <Button
        android:id="@+id/btnRegisterStudentPhMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/btnColour"
        android:text="More"
        app:layout_constraintBaseline_toBaselineOf="@id/editRegisterStudentPhNumber"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/labelRegisterStudentEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        app:layout_constraintBaseline_toBaselineOf="@id/editRegisterStudentEmail"
        app:layout_constraintStart_toStartOf="@+id/labelRegisterStudentPhNumber" />

    <EditText
        android:id="@+id/editRegisterStudentEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/btnRegisterStudentEmailMore"
        app:layout_constraintStart_toEndOf="@+id/labelRegisterStudentFirstName"
        app:layout_constraintTop_toBottomOf="@+id/editRegisterStudentPhNumber" />

    <Button
        android:id="@+id/btnRegisterStudentEmailMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/btnColour"
        android:text="More"
        app:layout_constraintBaseline_toBaselineOf="@id/editRegisterStudentEmail"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageRegisterStudentImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegisterStudentPhMore"
        app:layout_constraintEnd_toEndOf="@+id/btnRegisterStudentPhMore"
        app:layout_constraintStart_toStartOf="@+id/btnRegisterStudentPhMore"
        app:layout_constraintTop_toTopOf="@+id/editRegisterStudentFirstName" />

    <Button
        android:id="@+id/btnRegisterStudentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/btnColour"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterStudentImport" />

    <Button
        android:id="@+id/btnRegisterStudentImport"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/btnColour"
        android:text="Import Contact"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btnRegisterStudentPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRegisterStudentEmail" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRegisterStudent"
        android:layout_width="412dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegisterStudentBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterStudentAdd" />

    <Button
        android:id="@+id/btnRegisterStudentBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/btnColour"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRegisterStudentPhoto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/btnColour"
        android:text="Add Photo"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRegisterStudentImport"
        app:layout_constraintTop_toBottomOf="@+id/editRegisterStudentEmail" />
</androidx.constraintlayout.widget.ConstraintLayout>