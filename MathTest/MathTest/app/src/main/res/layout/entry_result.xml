<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/labelEntryResultFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Firstname:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textEntryResultFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/labelEntryResultFirstname"
        app:layout_constraintTop_toTopOf="@+id/labelEntryResultFirstname" />

    <TextView
        android:id="@+id/labelEntryResultLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lastname:"
        app:layout_constraintStart_toStartOf="@+id/labelEntryResultFirstname"
        app:layout_constraintTop_toBottomOf="@+id/labelEntryResultFirstname" />

    <TextView
        android:id="@+id/labelEntryResultMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Mark:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/labelEntryResultLastname"
        app:layout_constraintTop_toBottomOf="@+id/labelEntryResultLastname" />

    <TextView
        android:id="@+id/textEntryResultLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/labelEntryResultLastname"
        app:layout_constraintTop_toTopOf="@+id/labelEntryResultLastname" />

    <TextView
        android:id="@+id/textEntryResultMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/labelEntryResultMark"
        app:layout_constraintTop_toTopOf="@+id/labelEntryResultMark" />

    <TextView
        android:id="@+id/labelEntryResultDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="10dp"
        android:text="Time of Test:"
        app:layout_constraintStart_toEndOf="@+id/labelEntryResultLastname"
        app:layout_constraintTop_toTopOf="@+id/labelEntryResultFirstname" />

    <TextView
        android:id="@+id/textEntryResultDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/labelEntryResultDate"
        app:layout_constraintTop_toTopOf="@+id/labelEntryResultDate" />

    <TextView
        android:id="@+id/labelEntryResultTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="10dp"
        android:text="Total Time:"
        app:layout_constraintBottom_toBottomOf="@+id/labelEntryResultMark"
        app:layout_constraintStart_toEndOf="@+id/labelEntryResultLastname" />

    <TextView
        android:id="@+id/textEntryResultTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/labelEntryResultTotalTime"
        app:layout_constraintTop_toTopOf="@+id/labelEntryResultTotalTime" />
</androidx.constraintlayout.widget.ConstraintLayout>